{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2018",
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noEmitHelpers": true,
    "alwaysStrict": true
  },
  "include": [
    "src/Libs/Shims/*.ts",
    "src/Libs/Polymer/types/polymer.d.ts",
    "src/Libs/Typings/**/*.d.ts",
    "src/Libs/Vidyano/vidyano.d.ts",
    "src/WebComponents/**/*.ts"
  ],
  "exclude": [
    "src/WebComponents/**/*.d.ts"
  ]
}